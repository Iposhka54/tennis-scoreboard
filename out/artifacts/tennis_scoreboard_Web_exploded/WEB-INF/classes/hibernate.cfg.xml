<?xml version="1.0" encoding="UTF-8"?>
<hibernate-configuration xmlns="https://hibernate.org/xsd/orm/cfg"
                         xsi:schemaLocation="https://hibernate.org/xsd/orm/cfg https://hibernate.org/xsd/orm/cfg/hibernate-configuration-6.0.xsd"
                         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
  <session-factory>
    <property name="hibernate.connection.url">jdbc:h2:mem:project4</property>
    <property name="hibernate.connection.driver_class">org.h2.Driver</property>

    <property name="hibernate.show_sql">true</property>
    <property name="hibernate.format_sql">true</property>

    <property name="hibernate.dialect">org.hibernate.dialect.H2Dialect</property>

    <property name="hibernate.hbm2ddl.auto">create-drop</property>
    <property name="hibernate.hbm2ddl.import_files">init.sql</property>

    <mapping class="com.iposhka.model.Player"/>
    <mapping class="com.iposhka.model.Match"/>
  </session-factory>
</hibernate-configuration>
